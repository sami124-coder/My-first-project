#length
#should uppercase or smallcase
#should special 
#should involve digits 

import random 
import string 


def genertate_passward () :
    length = int (input ("Enter your length :") . strip ())
    upper_case = input ("Should involve uppercase:  (Yes / No) ") . strip () . lower()
    special = input ("Should involve special letters: (Yes / No) ") . strip () . lower () 
    digits = input ("Should involve digits letters: (Yes / No) ") . strip () . lower () 

    if length < 4 :
        print ("The character should be at least 4 ")
        return 
    
    lower = string.ascii_lowercase 
    upper = string.ascii_uppercase  if upper_case == "yes" else ""
    specials = string.punctuation if special == "yes" else ""
    digit = string.digits if digits == "yes" else ""
    all_character = lower + upper + specials + digit 
    
    required_character = []
    if upper_case == "yes":
        required_character.append (random.choice (upper))
    if special == "yes" :
        required_character.append (random.choice (specials))  
    if digits == "yes" : 
        required_character.append (random.choice (digit)) 

    remaining_number = length - len(required_character) 
    passward  = required_character

    for _ in range(remaining_number):
        character = random.choice(all_character)
        passward.append(character)
    random.shuffle (passward)
    str_passward = "".join (passward)
    return print ( str_passward )    
    
     
    

final_answer = genertate_passward ()    
